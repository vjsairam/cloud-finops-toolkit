{
  "dashboard": {
    "title": "Cloud FinOps - Cost Overview",
    "tags": ["finops", "cost", "multi-cloud"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Monthly Cost",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(cloud_cost_total)",
            "legendFormat": "Total Cost"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Cost by Provider",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (provider) (cloud_cost_by_provider)",
            "legendFormat": "{{provider}}"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Daily Cost Trend",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(cloud_cost_daily)",
            "legendFormat": "Daily Cost"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Cost by Service (Top 10)",
        "type": "bargauge",
        "targets": [
          {
            "expr": "topk(10, sum by (service) (cloud_cost_by_service))",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Cost by Team",
        "type": "table",
        "targets": [
          {
            "expr": "sum by (team) (cloud_cost_by_tag{tag_key='Team'})",
            "legendFormat": "{{team}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Cost by Environment",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (environment) (cloud_cost_by_tag{tag_key='Environment'})",
            "legendFormat": "{{environment}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Anomaly Alerts (Last 7 Days)",
        "type": "table",
        "targets": [
          {
            "expr": "cost_anomalies{severity!='low'}",
            "legendFormat": ""
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Budget Utilization",
        "type": "bargauge",
        "targets": [
          {
            "expr": "budget_utilization_percent",
            "legendFormat": "{{team}}"
          }
        ],
        "options": {
          "thresholds": [
            {"value": 0, "color": "green"},
            {"value": 75, "color": "yellow"},
            {"value": 90, "color": "red"}
          ]
        },
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 9,
        "title": "Savings from Remediations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(remediation_savings_monthly)",
            "legendFormat": "Monthly Savings"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 32}
      }
    ],
    "refresh": "5m",
    "schemaVersion": 27,
    "version": 1
  }
}
